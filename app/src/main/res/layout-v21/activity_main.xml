<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="88dp"
        android:layout_height="78dp"
        android:layout_marginStart="32dp"
        android:src="@drawable/ic_cohete"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.532"
        android:contentDescription="@string/app_name" />

    <ImageView
        android:layout_width="81dp"
        android:layout_height="83dp"
        android:layout_marginTop="28dp"
        android:src="@drawable/ic_auriculares"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.142"
        android:contentDescription="@string/app_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.1" />

    <ImageView
        android:layout_width="108dp"
        android:layout_height="95dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_bolsa_de_la_compra"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/app_name"
        app:layout_constraintHorizontal_bias="0.864"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:layout_width="92dp"
        android:layout_height="86dp"
        android:src="@drawable/ic_reloj"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/app_name"
        app:layout_constraintHorizontal_bias="0.802"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.897" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="216dp"
        android:layout_height="268dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/bt_recargas"
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:background="@drawable/bordesreca"
            android:padding="10dp"
            android:text="@string/recargas"
            android:elevation="10dp"
            android:stateListAnimator="@null"
            android:translationZ="2dp"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn_paquetes"
            android:layout_width="180dp"
            android:background="@drawable/bg_botones"
            android:layout_height="80dp"
            android:layout_marginTop="30sp"
            android:elevation="10dp"
            android:padding="10dp"
            android:stateListAnimator="@null"
            android:text="@string/paquetes"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:translationZ="2dp" />

    </LinearLayout>

<!--    android:background="@drawable/bg_botones"-->


</androidx.constraintlayout.widget.ConstraintLayout>